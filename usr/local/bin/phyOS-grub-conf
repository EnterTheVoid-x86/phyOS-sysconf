#!/bin/bash

[[ -f "$HOME/.config/phyos/phyos.conf" ]] && source "$HOME/.config/phyos/phyos.conf"

sudo find /etc/grub.d/ -name '*linux*' | xargs sed -i '/message/d;/xmessage/d;/lmessage/d;s/Arch\ Linux/phyOS/g;s/fallback/safegraphics/g'
sudo /usr/bin/grub-install
sudo /usr/bin/grub-mkconfig -o /boot/grub/grub.cfg
